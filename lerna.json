{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useNx": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["main"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "allowBranch": ["main"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github",
      "registry": "https://registry.npmjs.org/"
    }
  }
}
